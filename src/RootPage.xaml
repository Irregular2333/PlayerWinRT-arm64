<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Player.RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Player"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    ActualThemeChanged="Page_ActualThemeChanged"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <Page.Resources>
        <Style
            x:Key="PlayerEllipsis"
            BasedOn="{StaticResource EllipsisButton}"
            TargetType="Button">
            <Setter Property="Width" Value="43" />
            <Setter Property="Height" Value="47" />
        </Style>
        <Style x:Key="PlayButtonSmall" TargetType="Button">
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="36" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>
        <Style x:Key="PlayButtonLarge" TargetType="Button">
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="50" />
            <Setter Property="BorderThickness" Value="4" />
        </Style>
    </Page.Resources>
    <Grid MinWidth="{StaticResource BreakpointTiny}" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid
            Grid.Column="1"
            Height="48"
            VerticalAlignment="Top"
            Canvas.ZIndex="-1000">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="ButtonPlaceholder" Width="48" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Name="AppTitleBar"
                Grid.Column="1"
                Orientation="Horizontal">
                <Image
                    Width="24"
                    Height="24"
                    Margin="0,2,12,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Source="/Assets/Square44x44Logo.png" />
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="{x:Bind AppTitleText}" />
            </StackPanel>
        </Grid>
        <NavigationView
            Name="MainNavigation"
            Grid.Column="1"
            AlwaysShowHeader="False"
            BackRequested="Navigation_BackRequested"
            Canvas.ZIndex="0"
            IsBackEnabled="{x:Bind RootFrame.CanGoBack, Mode=OneWay}"
            ItemInvoked="Navigation_ItemInvoked"
            OpenPaneLength="300">

            <NavigationView.AutoSuggestBox>
                <AutoSuggestBox
                    Name="controlsSearchBox"
                    x:Uid="Search"
                    MinWidth="200"
                    VerticalAlignment="Center"
                    x:FieldModifier="public"
                    IsEnabled="False"
                    KeyboardAcceleratorPlacementMode="Hidden">
                    <AutoSuggestBox.QueryIcon>
                        <FontIcon FontFamily="{StaticResource IconFontFamily}" Glyph="&#xE721;" />
                    </AutoSuggestBox.QueryIcon>
                    <AutoSuggestBox.KeyboardAccelerators>
                        <KeyboardAccelerator Key="F" Modifiers="Control" />
                    </AutoSuggestBox.KeyboardAccelerators>
                </AutoSuggestBox>
            </NavigationView.AutoSuggestBox>

            <Frame Name="RootFrame" />
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Name="Current"
                    IsSelected="True"
                    Tapped="Current_Tapped"
                    Visibility="Collapsed">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource IconFontFamily}" Glyph="&#xE80F;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    Name="MainLibraryList"
                    x:Uid="Libraries"
                    IsExpanded="{x:Bind MainNavigation.IsPaneOpen, Mode=OneWay}">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource IconFontFamily}" Glyph="&#xE8F1;" />
                    </NavigationViewItem.Icon>
                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem x:Uid="AddLibrary" Tapped="Add_Tapped">
                            <NavigationViewItem.Icon>
                                <FontIcon FontFamily="{StaticResource IconFontFamily}" Glyph="&#xE710;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>
                <NavigationViewItemSeparator />
                <NavigationViewItem
                    Name="NainPlayList"
                    x:Uid="PlayList"
                    IsEnabled="False">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource IconFontFamily}" Glyph="&#xE90B;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Songs" IsEnabled="False">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource IconFontFamily}" Glyph="&#xE8D6;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    Name="Folders"
                    x:Uid="Folders"
                    Tapped="Folders_Tapped">
                    >
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource IconFontFamily}" Glyph="&#xE8B7;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Albums" IsEnabled="False">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource IconFontFamily}" Glyph="&#xE93C;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Artists" IsEnabled="False">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource IconFontFamily}" Glyph="&#xF12E;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Genres" IsEnabled="False">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource IconFontFamily}" Glyph="&#xE909;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemSeparator />
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem x:Uid="About" Tapped="About_Tapped">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource IconFontFamily}" Glyph="&#xE946;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Uid="Equalizer"
                    IsEnabled="False"
                    Tapped="Equalizer_Tapped">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource IconFontFamily}" Glyph="&#xE9E9;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>
        </NavigationView>
        <Grid
            Name="Player"
            Grid.Row="1"
            Grid.Column="1"
            Width="{Binding ElementName=MainNavigation, Path=Width}"
            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Rectangle
                Grid.ColumnSpan="3"
                Height="1"
                Fill="#E5E5E5" />
            <Grid Grid.Row="1" Grid.ColumnSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    x:Uid="ElapsedTime"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="11"
                    Text="{x:Bind local:PlayerViewModel.DurationToString(PlayerViewModel.Position), Mode=OneWay}" />
                <Slider
                    Name="PlayerSlider"
                    Grid.Column="1"
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    IsThumbToolTipEnabled="False"
                    Maximum="{x:Bind PlayerViewModel.Duration, Mode=OneWay}"
                    StepFrequency="5000000"
                    Value="{x:Bind PlayerViewModel.Position, Mode=TwoWay}" />
                <TextBlock
                    x:Uid="RemainingTime"
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="11"
                    Text="{x:Bind local:PlayerViewModel.DurationToString(PlayerViewModel.Duration), Mode=OneWay}" />
            </Grid>
            <Button
                x:Uid="Playing"
                Grid.Row="2"
                Width="Auto"
                Margin="2,-7,0,-1"
                HorizontalAlignment="Left"
                Style="{StaticResource EllipsisButton}">
                <Grid Margin="-2,0,0,0" Padding="2,0,1,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Margin="4"
                        BorderBrush="{StaticResource SmokeFillColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="2">
                        <Image
                            Name="PlayerPicture"
                            Width="70"
                            Height="70"
                            Source="/Assets/StoreLogo.scale-400.png" />
                    </Border>
                    <StackPanel Grid.Column="1">
                        <TextBlock
                            Name="PlayerTitle"
                            Margin="10,15,10,2"
                            VerticalAlignment="Center"
                            FontSize="19"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            Text="PlayerWinRT"
                            TextWrapping="NoWrap" />
                        <TextBlock
                            Name="PlayerArtist"
                            Margin="10,0,10,0"
                            VerticalAlignment="Top"
                            FontSize="13"
                            Opacity="0.7"
                            Text="Artist" />
                    </StackPanel>
                </Grid>
            </Button>
            <StackPanel
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Name="Shuffle"
                    x:Uid="Shuffle"
                    Style="{StaticResource PlayerEllipsis}"
                    Tapped="Shuffle_Tapped">
                    <FontIcon
                        FontFamily="{StaticResource IconFontFamily}"
                        FontSize="16"
                        Glyph="&#xE30D;" />
                </Button>
                <Button
                    x:Uid="Previous"
                    Style="{StaticResource PlayerEllipsis}"
                    Tapped="Previous_Tapped">
                    <FontIcon
                        Name="PreviousIcon"
                        FontFamily="{StaticResource IconFontFamily}"
                        FontSize="16"
                        Glyph="&#xE892;" />
                </Button>
                <Button
                    Name="PlayButton"
                    x:Uid="Play"
                    Margin="2,0,6,0"
                    Padding="0"
                    Background="Transparent"
                    BorderBrush="{StaticResource AccentFillColorDefaultBrush}"
                    CornerRadius="1000"
                    Style="{StaticResource PlayButtonLarge}"
                    Tapped="PlayButton_Tapped">
                    <FontIcon
                        Name="PlayIcon"
                        Margin="2,0,0,0"
                        HorizontalAlignment="Center"
                        FontFamily="{StaticResource IconFontFamily}"
                        FontSize="23"
                        Glyph="&#xE768;" />
                </Button>
                <Button
                    x:Uid="Next"
                    Style="{StaticResource PlayerEllipsis}"
                    Tapped="Next_Tapped">
                    <FontIcon
                        Name="NextIcon"
                        FontFamily="{StaticResource IconFontFamily}"
                        FontSize="16"
                        Glyph="&#xE893;" />
                </Button>
                <Button
                    Name="Repeat"
                    x:Uid="Repeat"
                    Style="{StaticResource PlayerEllipsis}"
                    Tapped="Repeat_Tapped">
                    <FontIcon
                        FontFamily="{StaticResource IconFontFamily}"
                        FontSize="16"
                        Glyph="&#xF5E7;" />
                </Button>
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Grid.Column="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button x:Uid="Volume" Style="{StaticResource PlayerEllipsis}">
                    <Button.Flyout>
                        <Flyout>
                            <Grid Margin="-10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    x:Uid="Volume"
                                    Style="{StaticResource PlayerEllipsis}"
                                    Tapped="Mute_Tapped">
                                    <FontIcon
                                        FontFamily="{StaticResource IconFontFamily}"
                                        FontSize="16"
                                        Glyph="&#xE767;" />
                                </Button>
                                <Slider
                                    Name="VolumeSlider"
                                    Grid.Column="1"
                                    Width="150"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    IsThumbToolTipEnabled="False"
                                    LostFocus="Volume_LostFocus"
                                    StepFrequency="1"
                                    Value="{x:Bind PlayerViewModel.Volume, Mode=TwoWay}" />
                                <TextBlock
                                    Grid.Column="2"
                                    Width="30"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind local:PlayerViewModel.DoubleToString(PlayerViewModel.Volume), Mode=OneWay}" />
                            </Grid>
                        </Flyout>
                    </Button.Flyout>
                    <FontIcon
                        FontFamily="{StaticResource IconFontFamily}"
                        FontSize="16"
                        Glyph="&#xE767;" />
                </Button>
                <Button
                    x:Uid="FullScreen"
                    IsEnabled="False"
                    Style="{StaticResource PlayerEllipsis}">
                    <FontIcon
                        FontFamily="{StaticResource IconFontFamily}"
                        FontSize="16"
                        Glyph="&#xE740;" />
                </Button>
                <Button
                    x:Uid="Expand"
                    IsEnabled="False"
                    Style="{StaticResource PlayerEllipsis}">
                    <FontIcon
                        FontFamily="{StaticResource IconFontFamily}"
                        FontSize="16"
                        Glyph="&#xEE47;" />
                </Button>
                <Button
                    Name="More"
                    x:Uid="More"
                    Style="{StaticResource PlayerEllipsis}">
                    <FontIcon
                        FontFamily="{StaticResource IconFontFamily}"
                        FontSize="16"
                        Glyph="&#xE712;" />
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Uid="MusicInfo" Tapped="MusicInfo_Tapped">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{StaticResource IconFontFamily}" Glyph="&#xE946;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Uid="SelectDevices" IsEnabled="False">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{StaticResource IconFontFamily}" Glyph="&#xF4C3;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
        </Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource BreakpointMedium}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainNavigation.IsPaneOpen" Value="True" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource BreakpointSmall}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainNavigation.IsPaneOpen" Value="False" />
                        <Setter Target="PlayButton.Style" Value="{StaticResource PlayButtonLarge}" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource BreakpointTiny}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="PlayButton.Style" Value="{StaticResource PlayButtonSmall}" />
                        <Setter Target="PlayIcon.FontSize" Value="16" />
                        <Setter Target="More.Visibility" Value="Collapsed" />
                        <Setter Target="Repeat.Visibility" Value="Collapsed" />
                        <Setter Target="Shuffle.Visibility" Value="Collapsed" />
                        <Setter Target="Player.ColumnDefinitions" Value="1*,1*,1*" />
                        <Setter Target="ButtonPlaceholder.Width" Value="96" />
                        <Setter Target="RootFrame.Margin" Value="0,48,0,0" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="PlayButton.Style" Value="{StaticResource PlayButtonSmall}" />
                        <Setter Target="PlayIcon.FontSize" Value="16" />
                        <Setter Target="More.Visibility" Value="Collapsed" />
                        <Setter Target="PlayerTitle.Visibility" Value="Collapsed" />
                        <Setter Target="PlayerArtist.Visibility" Value="Collapsed" />
                        <Setter Target="Repeat.Visibility" Value="Collapsed" />
                        <Setter Target="Shuffle.Visibility" Value="Collapsed" />
                        <Setter Target="Player.ColumnDefinitions" Value="Auto,Auto,Auto" />
                        <Setter Target="ButtonPlaceholder.Width" Value="96" />
                        <Setter Target="RootFrame.Margin" Value="0,48,0,0" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
